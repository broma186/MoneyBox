<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_turquoise_border"
    android:layout_marginBottom="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:id="@+id/account_name"
        android:layout_width="wrap_content"
        android:text="Account Name"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:paddingLeft="20dp"
        android:paddingBottom="10dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/plan_value_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Plan Value: "
        android:paddingBottom="10dp"
        android:paddingLeft="20dp"
        android:textSize="20sp"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/account_name" />

    <TextView
        android:id="@+id/plan_value_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:paddingBottom="10dp"
        android:textSize="20sp"
        android:text="$1000"
        app:layout_constraintStart_toEndOf="@id/plan_value_title"
        app:layout_constraintTop_toBottomOf="@id/account_name" />

    <TextView
        android:id="@+id/money_box_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:paddingLeft="20dp"
        android:text="Moneybox: "
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@id/plan_value_title"
        app:layout_constraintTop_toBottomOf="@id/plan_value_value" />

    <TextView
        android:id="@+id/money_box_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$100"
        android:textSize="20sp"
        android:textColor="@color/white"
        app:layout_constraintStart_toEndOf="@id/money_box_title"
        app:layout_constraintTop_toBottomOf="@id/plan_value_value"  />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/select_right_image"
        android:src="@drawable/accounts_item_select"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</android.support.constraint.ConstraintLayout>