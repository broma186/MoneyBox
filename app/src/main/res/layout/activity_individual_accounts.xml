<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:id="@+id/individual_accounts_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/user_accounts_title"
        android:layout_marginStart="30dp"
        android:layout_marginBottom="100dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/individual_account_name"
        android:layout_width="wrap_content"
        android:text="Account Name"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/individual_accounts_title" />

    <TextView
        android:id="@+id/individual_plan_value_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="70dp"
        android:layout_marginStart="30dp"
        android:text="Plan Value: "
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/individual_account_name" />

    <TextView
        android:id="@+id/individual_plan_value_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$1000"
        app:layout_constraintStart_toEndOf="@id/individual_plan_value_title"
        app:layout_constraintTop_toBottomOf="@id/individual_account_name" />

    <TextView
        android:id="@+id/individual_money_box_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:text="Moneybox: "
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/individual_plan_value_title" />

    <TextView
        android:id="@+id/individual_money_box_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$100"
        app:layout_constraintStart_toEndOf="@id/individual_money_box_title"
        app:layout_constraintTop_toBottomOf="@id/individual_plan_value_value"  />


    <Button
        android:id="@+id/top_up_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add \u00a310"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="70dp"
        />
</android.support.constraint.ConstraintLayout>