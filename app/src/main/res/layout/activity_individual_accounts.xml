<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:id="@+id/individual_accounts_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/user_accounts_title"
        android:textColor="@color/colorPrimaryDark"
        android:layout_marginStart="30dp"
        android:textSize="26sp"
        android:paddingTop="30dp"
        android:paddingBottom="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <TextView
        android:id="@+id/individual_account_name"
        android:layout_width="wrap_content"
        android:text="Account Name"
        android:textSize="24sp"
        android:textColor="@color/colorPrimaryDark"
        android:layout_height="wrap_content"
        android:layout_marginBottom="100dp"
        android:paddingBottom="30dp"
        app:layout_constraintStart_toStartOf="@+id/individual_accounts_title"
        app:layout_constraintTop_toBottomOf="@+id/individual_accounts_title" />

    <TextView
        android:id="@+id/individual_plan_value_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Plan Value: "
        android:paddingBottom="30dp"
        android:textSize="24sp"
        android:textColor="@color/colorPrimaryDark"
        app:layout_constraintStart_toStartOf="@+id/individual_account_name"
        app:layout_constraintTop_toBottomOf="@+id/individual_account_name" />

    <TextView
        android:id="@+id/individual_plan_value_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$1000"
        android:textSize="24sp"
        android:textColor="@color/colorPrimaryDark"
        app:layout_constraintStart_toEndOf="@+id/individual_plan_value_title"
        app:layout_constraintTop_toBottomOf="@+id/individual_account_name" />

    <TextView
        android:id="@+id/individual_money_box_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="30dp"
        android:text="Moneybox: "
        android:textSize="24sp"
        android:textColor="@color/colorPrimaryDark"
        app:layout_constraintStart_toStartOf="@+id/individual_plan_value_title"
        app:layout_constraintTop_toBottomOf="@+id/individual_plan_value_title" />

    <TextView
        android:id="@+id/individual_money_box_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$100"
        android:textSize="24sp"
        android:textColor="@color/colorPrimaryDark"
        app:layout_constraintStart_toEndOf="@+id/individual_money_box_title"
        app:layout_constraintTop_toBottomOf="@+id/individual_plan_value_title"  />


    <Button
        android:id="@+id/top_up_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add \u00a310"
        android:textSize="24sp"
        android:textColor="@color/white"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:background="@drawable/background_button_colored_rounded_medium"
        android:fontFamily="@font/roboto_regular"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="100dp"
        />
</android.support.constraint.ConstraintLayout>